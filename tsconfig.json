{
  "compilerOptions": {
    "strict": true,
    "allowJs": false,
    "noErrorTruncation": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noUncheckedIndexedAccess": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true,
    "noEmit": true,
    "module": "NodeNext",
    "target": "ESNext"
  },
  "include": ["src/**/*", "tests/**/*"]
}
